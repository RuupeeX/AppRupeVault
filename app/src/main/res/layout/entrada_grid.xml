<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <!-- Imagen del producto más alta -->
        <ImageView
            android:id="@+id/imagen_grid"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/image_grid_bg"
            android:clipToOutline="true" />

        <!-- Contenedor de texto con más espacio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:gravity="center_horizontal">

            <!-- Nombre del producto -->
            <TextView
                android:id="@+id/texto_titulo_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoodie Supreme BoxLogo"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Precio -->
            <TextView
                android:id="@+id/texto_datos_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="355€"
                android:textColor="#616161"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:gravity="center" />

            <!-- Espacio adicional para futuros elementos -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
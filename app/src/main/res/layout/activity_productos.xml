<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="0dp">

    <!-- Header modificado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#1E1E1E"
        android:elevation="4dp">

        <!-- Botón volver -->
        <ImageView
            android:id="@+id/iconoVolver"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/back"
            app:tint="#8A16C1"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Volver" />

        <!-- Título de la categoría -->
        <TextView
            android:id="@+id/tituloCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Categoría"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:textColor="#8A16C1" />

        <!-- Contenedor para iconos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconoBuscar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/lupa"
                android:scaleType="fitCenter"
                app:tint="#8A16C1"
                android:padding="10dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Buscar" />

            <ImageView
                android:id="@+id/iconoMenu"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/menu"
                android:scaleType="fitCenter"
                app:tint="#8A16C1"
                android:padding="10dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Cambiar vista" />

        </LinearLayout>

    </LinearLayout>

    <!-- BARRA DE BÚSQUEDA MEJORADA -->
    <LinearLayout
        android:id="@+id/layoutBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1E1E1E"
        android:elevation="4dp"
        android:visibility="gone">

        <!-- Contenedor del campo de búsqueda con icono -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/search_background"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lupa"
                app:tint="#8A16C1"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/editTextBuscar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Buscar..."
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:background="@android:color/transparent"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:padding="0dp" />

        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="#1E1E1E"
        android:padding="8dp"
        android:clipToPadding="false"
        android:visibility="visible" />

    <!-- GridView CardView -->
    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="2"
        android:verticalSpacing="12dp"
        android:horizontalSpacing="12dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:background="#1E1E1E"
        android:padding="8dp"
        android:clipToPadding="false"
        android:visibility="gone" />

    <!-- BARRA INFERIOR CON TODOS LOS IDs AÑADIDOS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="#1E1E1E"
        android:paddingHorizontal="17dp"
        android:elevation="8dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icons8_casa_96"
                app:tint="#8A16C1" />

        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bolsa"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Like -->
        <LinearLayout
            android:id="@+id/likeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icons8_me_gusta_96"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/notificationsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icons8_recordatorios_de_citas_96"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- User -->
        <LinearLayout
            android:id="@+id/userButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icons8_usuario_96"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
            <gradient
                android:startColor="#0A3352"
                android:endColor="#0C3F66"
                android:angle="45" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0C3F66"
                android:endColor="#1A5A8A"
                android:angle="45" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
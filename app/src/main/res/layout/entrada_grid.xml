<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Imagen del producto con fondo blanco -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imagen_grid"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/image_grid_bg"
                android:clipToOutline="true" />

        </LinearLayout>

        <!-- Contenedor de texto con fondo oscuro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2D2D2D"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <!-- Nombre del producto -->
            <TextView
                android:id="@+id/texto_titulo_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Precio -->
            <TextView
                android:id="@+id/texto_datos_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precioâ‚¬"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>